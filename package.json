{
  "name": "startdown",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.10",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "check": "biome check apps/cli/scripts/ packages/",
    "fix": "biome check --write apps/cli/scripts/ packages/",
    "clean": "git clean -xdf node_modules",
    "ci:version": "changeset version && bun update",
    "ci:publish": "cd apps/cli && npm publish --access public --provenance || exit 0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@changesets/cli": "^2.29.8",
    "turbo": "^2.8.12",
    "typescript": "^5.9.3",
    "ultracite": "7.2.4"
  }
}
