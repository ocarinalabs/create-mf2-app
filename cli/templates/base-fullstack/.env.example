# Convex
# Deployment used by `npx convex dev`
CONVEX_DEPLOYMENT=

NEXT_PUBLIC_CONVEX_URL=

# Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=
CLERK_FRONTEND_API_URL=
# Clerk JWT Issuer Domain (from your "convex" JWT template)
CLERK_JWT_ISSUER_DOMAIN=

# Polar
POLAR_ORGANIZATION_TOKEN=
POLAR_WEBHOOK_SECRET=
# Set to "production" for live environment, defaults to "sandbox"
POLAR_SERVER=sandbox
# Enable/disable Polar features
NEXT_PUBLIC_POLAR_ENABLED=true
# Polar Product IDs (get these from your Polar dashboard)
NEXT_PUBLIC_POLAR_STARTER_PRODUCT_ID=
NEXT_PUBLIC_POLAR_PRO_PRODUCT_ID=

# Resend
RESEND_API_KEY=
RESEND_WEBHOOK_SECRET=
# Required: Your verified sender email (must be verified in Resend dashboard)
RESEND_FROM_EMAIL=

# PostHog (Optional - Analytics)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
