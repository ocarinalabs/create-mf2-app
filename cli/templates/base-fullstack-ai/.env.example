# Convex
# Deployment used by `npx convex dev`
CONVEX_DEPLOYMENT=

NEXT_PUBLIC_CONVEX_URL=

# Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=
CLERK_FRONTEND_API_URL=

# Polar
POLAR_ORGANIZATION_TOKEN=
POLAR_WEBHOOK_SECRET=
# Set to "production" for live environment, defaults to "sandbox"
POLAR_SERVER=sandbox
# Enable/disable Polar features
NEXT_PUBLIC_POLAR_ENABLED=true
# Polar Product IDs (get these from your Polar dashboard)
NEXT_PUBLIC_POLAR_STARTER_PRODUCT_ID=
NEXT_PUBLIC_POLAR_PRO_PRODUCT_ID=

# Resend
RESEND_API_KEY=
RESEND_WEBHOOK_SECRET=
RESEND_FROM_EMAIL=

# PostHog (Optional - Analytics)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Arcjet
ARCJET_KEY=

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Vercel
FLAGS_SECRET=

# AI Configuration
# OpenAI API Key (required for AI features)
OPENAI_API_KEY=

# Optional AI Configuration
# Chat model (default: gpt-4o-mini)
AI_CHAT_MODEL=gpt-4o-mini
# Embedding model (default: text-embedding-3-small)
AI_EMBEDDING_MODEL=text-embedding-3-small
# Rate limits
AI_MESSAGE_RATE_LIMIT=10      # messages per minute per user
AI_TOKEN_DAILY_LIMIT=50000    # tokens per day per user

# Optional: Alternative AI Providers
# ANTHROPIC_API_KEY=
# GOOGLE_AI_API_KEY=
